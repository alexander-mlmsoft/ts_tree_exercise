{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "allowJs": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "dev"
  ]
}
